{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}{{ "Images"|trans }}{% endblock %}
{% block content %}
    {% for message in app.session.flashbag.get('infos') %}
        <div class="row">
            <div class="col-md-2 col-md-offset-5 text-center alert alert-success" role="alert">{{ message }}</div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-md-5 col-xs-5 first-img">
            <div class="thumbnail">
                <img src="{{ asset('uploads/img/' ~ images[0].path) }}" alt="First image"/>
            </div>
            <div class="vote-btn">
                <form action="{{ path('vote_submit') }}" method="post">
                    <input type="hidden" name="winner" value="{{ images[0].id }}">
                    <input type="hidden" name="looser" value="{{ images[1].id }}">
                    <input type="submit" class="btn btn-primary center-block" role="button" value="Voter pour"/>
                </form>
            </div>                
        </div>
        <div class="col-md-2 col-xs-2 versus-big-text"><span>VS</span></div>
        <div class="col-md-5 col-xs-5 second-img">
            <div class="thumbnail">
                <img src="{{ asset('uploads/img/' ~ images[1].path) }}" alt="Second image"/>
            </div>
            <div class="vote-btn">
                <form action="{{ path('vote_submit') }}" method="post">
                    <input type="hidden" name="winner" value="{{ images[1].id }}">
                    <input type="hidden" name="looser" value="{{ images[0].id }}">
                    <input type="submit" class="btn btn-primary center-block" role="button" value="Voter pour"/>
                </form>
            </div>
        </div>        
    </div>

{% endblock %}
