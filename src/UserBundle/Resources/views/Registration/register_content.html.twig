{% trans_default_domain 'FOSUserBundle' %}
<h1>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h1>
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
	<div class="form-group">
		{{ form_label(form.email, null, { 'label_attr': { 'class': 'sr-only'  } }) }}
		{{ form_errors(form.email) }}
		{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.username, null, { 'label_attr': { 'class': 'sr-only'  } }) }}
		{{ form_errors(form.username) }}
		{{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.plainPassword.first, null, { 'label_attr': { 'class': 'sr-only'  } }) }}
		{{ form_errors(form.plainPassword.first) }}
		{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.plainPassword.second, null, { 'label_attr': { 'class': 'sr-only'  } }) }}
		{{ form_errors(form.plainPassword.second) }}
		{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
	</div>
    <div>
        <input type="submit" role="button" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
