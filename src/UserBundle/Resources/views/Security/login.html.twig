{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}{{ 'layout.login'|trans({}, 'FOSUserBundle') }}{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

{% block navbar %}{% endblock %}
{% block content %}{% endblock %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="col-md-4 col-md-offset-4">
	<h1>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h1>
	<form action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		<div class="form-group">
		    <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
		    <input type="text" id="username" name="_username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required" autofocus/>
		</div>
		<div class="form-group">	
		    <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
		    <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required="required" />
		</div>
		<div class="form-group">	
			<div class="checkbox">
		    	<label for="remember_me" >
		    		<input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
		    	</label>
		    	<a class="pull-right" href="{{ path('fos_user_resetting_request') }}" class="label-link">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</a>
			</div>	    
		</div>
		<div>
		    <input type="submit" id="_submit" name="_submit" role="button" class="btn btn-lg btn-primary btn-block" value="{{ 'security.login.submit'|trans }}" />
		</div>
	</form>
	<p class="need_account">
		New to Bt Checker? <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
	</p>
</div>
{% endblock fos_user_content %}
